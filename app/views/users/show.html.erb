<div class="container">
  <div class="row">

      <%= render 'books/info', book: @book, user: @user %>

    <div class="col-md-8 offset-md-1">

      <table class="table table-user-show">
        <h1>Books</h1>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
        <tr>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= image_tag @user.get_profile_image(40,40) %>
                <% end %>
            </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
          </tr>
        <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>