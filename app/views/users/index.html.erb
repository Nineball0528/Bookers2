<div class="container">
 <div class=row>
 <%= render 'books/info', book: @book,user: @user %>
    <div class="col-md-8 offset-md-1">


    <table class="table table-hover table-inverse">
     <h2>Users</h2>
      <tr>
        <th></th>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
        <tbody>
          <% @users.each do |user| %>
	  	  	<tr>
	  	  	  <td>
	  	  	      <%= image_tag user.get_profile_image(40,40) %>
	  	  	  </td>
	  	  	  <td><%= user.name %></td>
	  	  	  <td><%= link_to "Show", "/users/#{user.id}" %></td>
	  	  	</tr>
  	  	  <% end %>
        </tbody>
    </table>
  </div>
 </div>
</div>