<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'info', book: @newbook,user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table table-user-show">
        <tr>
          <td>
          <%= link_to user_path(@user) do %>
                <%= image_tag @user.get_profile_image(40,40) %><br>
                <%= @user.name %>
                <% end %>
          </td>
          <td></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"} ,class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>