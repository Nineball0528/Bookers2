
   <div class="col-md-3">

   <%= form_for(book) do |f| %>
   <div>
     <h1>User info</h1>
   <%= image_tag user.get_profile_image(63,63) %>
   </div>
  <table class="table">
    <tbody><tr></tr>
    <tr>
	    <th>name</th>
	    <th><%= user.name %></th>
    </tr>
    <tr>
	    <th>Introduction</th>
	    <th><%= user.introduction %></th>
    </tr>
  </tbody>
  </table>

<div class="row">
<%= link_to edit_user_path(user), class:"btn btn-default btn-block fas fa-user-cog" do %>
   <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
<% end %>
</div>


<h2 class="mt-3">New book</h2>
  <div class="form-group">
    <%= f.label :Title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
  	<%= f.label :Opinion %>
    <%= f.text_area :body %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-success " %>
  </div>
<% end %>
 </div>
