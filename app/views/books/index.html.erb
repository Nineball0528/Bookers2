<div class="container">
 <div class="row">

  <%= render 'users/flash', model: @book %>
  <%= render 'info', book: @book,user: @user %>

   <div class="col-md-8 offset-md-1">
      <table class="table table-hover table-inverse">
        <h2>Books</h2>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image(40,40) %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

